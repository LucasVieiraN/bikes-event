generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id                      String   @id @unique @default(uuid())
  name                    String
  start_date              DateTime
  start_date_registration DateTime
  end_date_registration   DateTime
  additional_information  String
  start_place             String
  participants_limit      Int
  users                   Users[]

  @@map("events")
}

model Users {
  id       String  @id @unique @default(uuid())
  user_id  String?
  name     String
  cpf      String  @unique
  email    String  @unique
  password String
  event    Events? @relation(fields: [user_id], references: [id])

  @@map("users")
}
